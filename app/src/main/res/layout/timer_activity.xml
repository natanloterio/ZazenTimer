<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodenbg">

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/knob_size"
                android:layout_height="396dp"
                android:background="@drawable/shadow">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <br.com.natanloterio.zazentimer.components.Knob
                        android:id="@+id/botao"
                        android:layout_width="@dimen/knob_size"
                        android:layout_height="@dimen/knob_size"
                        app:kAnimationBounciness="3"
                        android:clickable="true"
                        app:kAnimationSpeed="1"
                        app:kBalloonValuesArray="@array/posicoes"
                        app:kBalloonValuesRelativePosition="0"
                        app:kBalloonValuesTimeToLive="0"
                        app:kBorderColor="@color/grey_800"
                        app:kIndicatorColor="@color/grey_800"
                        app:kIndicatorRelativeLength="0.35"
                        app:kIndicatorWidth="1dp"
                        app:kKnobDrawable="@drawable/btn_knot"
                        app:kKnobDrawableRotates="true"
                        app:kNumberOfStates="12"
                        app:kClickBehaviour="user"
                        app:kShowBalloonValues="false"
                        app:kStateMarkersAccentPeriodicity="5"
                        app:kStateMarkersAccentWidth="0.5dp"
                        app:kStateMarkersWidth="0.5dp"
                        app:kSwipeSensitivityPixels="7" />

                    <TextView
                        android:id="@+id/timer_activity_time_txt"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="66sp"
                        android:padding="0dp"
                        android:clickable="true"
                        android:textColor="@color/brown_900"
                        android:layout_centerInParent="true"
                        android:text="5" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
